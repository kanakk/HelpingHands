    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="489dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="184dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/signup_emailID"
            android:layout_width="300dp"
            android:layout_height="46dp"
            android:hint="Email ID"
            android:selectAllOnFocus="false"

            android:singleLine="true"
             />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout4"

        android:layout_width="300dp"
        android:layout_height="58dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="548dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/signup_nameID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textPersonName"
             />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout5"
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:layout_marginStart="48dp"

        android:layout_marginTop="216dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="457dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/signup_passwordID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout6"
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="311dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="362dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/signup_EducationID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Education"
            android:inputType="text"

            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/signup_nextButtonID"
        android:layout_width="90dp"
        android:layout_height="58dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="582dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="91dp"
        android:background="@drawable/roundedbutton"
        android:text="NEXT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Signup_PhnID"
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="409dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="264dp"
        android:ems="10"
        android:hint="Mobile No"
        android:inputType="phone"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>