<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <Button
        android:id="@+id/helperButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="229dp"
        android:text="Are You A Helper?"
        app:layout_constraintStart_toStartOf="@+id/seekingButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/seekingButton"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:text="Seeking Help?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helperButton" />
</android.support.constraint.ConstraintLayout>